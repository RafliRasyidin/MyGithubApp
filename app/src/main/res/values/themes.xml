<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGithubApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <style name="TextButton16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/sofia_bold</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/sofia_regular</item>
        <item name="android:fontFamily">@font/sofia_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="TextSemiBold16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextSemiBold14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSemiBold15" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_semi_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextSemiBold18" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextRegular14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRegular12" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextRegular15" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextRegular16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMedium16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMedium15" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextMedium14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sofia_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>